<?xml version="1.0" encoding="utf-8"?>
<TableLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.freelance.android.crudapp.MainActivity">


    <TableRow
        android:id="@+id/tr1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/marginTop_5dp">

        <TextView
            android:id="@+id/tvContactsTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/marginLeft_5dp"
            android:layout_weight="1"
            android:text="@string/title"
            android:textAppearance="?android:attr/textAppearanceLarge"
            android:textColor="#000"></TextView>

        <Button
            android:id="@+id/btnAddContact"
            android:background="#BDBDBD"
            android:onClick="showAddContact"
            android:text="@string/ab"
            android:textAppearance="?android:attr/textAppearance"
            android:layout_marginRight="@dimen/marginLeft_5dp"
            android:textColor="#000"
            android:textSize="15sp"></Button>
    </TableRow>

    <TableRow
        android:id="@+id/tr2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ListView
            android:id="@android:id/list"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"></ListView>
    </TableRow>
</TableLayout>

